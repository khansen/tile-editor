<?xml version="1.0"?>
<project name="TileMolester" default="compile">
    <target name="clean" description="remove intermediate files">
        <delete dir="classes"/>
    </target>
    <target name="compile"
     description="compile the Java source code to class files">
        <mkdir dir="classes"/>
        <javac srcdir="." destdir="classes">
            <compilerarg value="-Xlint:unchecked"/>
        </javac>
    </target>
    <target name="jar" depends="compile"
     description="create a Jar file for the application">
        <jar destfile="tm.jar">
            <fileset dir="classes" includes="**/*.class"/>
            <fileset dir="." includes="**/*.gif"/>
            <fileset dir="." includes="**/*.properties"/>
            <fileset dir="." includes="**/*.dtd"/>
            <manifest>
                <attribute name="Main-Class" value="TileMolester"/>
            </manifest>
        </jar>
    </target>
    <target name="run" depends="jar">
        <java classname="TileMolester"
              classpath="tm.jar"
              />
    </target>
</project>
